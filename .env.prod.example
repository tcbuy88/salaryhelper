# 生产环境配置模板
# 复制为 .env.prod 并填写实际值

# 数据库配置
DATABASE_URL=postgresql://salaryhelper:your_password@postgres:5432/salaryhelper
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis 配置
REDIS_URL=redis://:your_password@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password

# 应用密钥
SECRET_KEY=your_production_secret_key_change_this
JWT_SECRET_KEY=your_jwt_secret_key_change_this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志级别
LOG_LEVEL=INFO

# 第三方服务配置
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key

# 文件存储配置
STORAGE_TYPE=oss
OSS_BUCKET=salaryhelper-uploads
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY=your_oss_access_key
OSS_SECRET_KEY=your_oss_secret_key

# 监控配置
SENTRY_DSN=https://your-sentry-dsn